<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="serel_product_pricelist_view_form" model="ir.ui.view">
            <field name="name">serel.product.pricelist.view.form</field>
            <field name="model">product.pricelist</field>
            <field name="inherit_id" ref="product.product_pricelist_view"/>
            <field name="arch" type="xml">
                <page name="pricelist_config" position="inside">
                    <group name="advised_pricelist" string="Advised">
                        <field name="advised_pricelist"/>
                    </group>
                </page>
            </field>
        </record>
    </data>
</odoo>